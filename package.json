{
  "name": "vanguard-dashboard",
  "private": true,
  "version": "1.0.0",
  "description": "Vanguard Tactical Dashboard",
  "author": "Antigravity",
  "type": "module",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "server": "tsx --watch server.ts",
    "start": "concurrently \"npm run server\" \"npm run dev\"",
    "build": "vite build",
    "preview": "vite preview",
    "server:compile": "tsc -p tsconfig.server.json",
    "electron:compile": "tsc -p electron/tsconfig.json && tsc -p tsconfig.server.json && node -e \"const fs = require('fs'); if (!fs.existsSync('dist-electron')) fs.mkdirSync('dist-electron'); fs.writeFileSync('dist-electron/package.json', JSON.stringify({type:'commonjs'}))\"",
    "electron:watch": "nodemon --watch electron --watch server.ts --ext ts --exec \"npm run electron:compile && wait-on http://localhost:5180 && electron .\"",
    "electron:dev": "cross-env NODE_ENV=development concurrently \"npm run server\" \"npm run dev\" \"npm run electron:watch\"",
    "electron:build": "cross-env ELECTRON_BUILD_CACHE=./.electron-builder-cache npm run electron:compile && vite build && electron-builder"
  },
  "build": {
    "appId": "com.vanguard.app",
    "productName": "Vanguard",
    "directories": {
      "output": "dist-electron-build"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        "portable",
        "zip"
      ],
      "icon": "public/icon.png",
      "verifyUpdateCodeSignature": false,
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Vanguard"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb",
        "rpm"
      ],
      "icon": "public/icon.png",
      "category": "Utility"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "public/icon.png",
      "category": "public.app-category.utilities"
    }
  },
  "dependencies": {
    "@radix-ui/react-avatar": "^1.1.2",
    "@radix-ui/react-slot": "^1.1.1",
    "@tanstack/react-query": "^5.64.2",
    "@tanstack/react-router": "^1.96.1",
    "axios": "^1.7.9",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "cmdk": "^1.0.0",
    "cors": "^2.8.5",
    "electron-squirrel-startup": "^1.0.1",
    "express": "^4.21.2",
    "framer-motion": "^11.18.1",
    "jimp": "^1.6.0",
    "lucide-react": "^0.474.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "recharts": "^2.15.0",
    "tailwind-merge": "^2.6.0",
    "tailwindcss": "^4.0.0",
    "tailwindcss-animate": "^1.0.7"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.17.16",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "nodemon": "^3.1.9",
    "postcss": "^8.5.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vite": "^6.0.11",
    "wait-on": "^9.0.3"
  }
}
